<div class="container">
<h1> <%=@cocktail.name%></h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>


<div>
<%@cocktail.doses.each do |dose|%>
<div><%= dose.description %>
<%=dose.ingredient.name %>
<%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
</div>

<div>


<h1>What's your dose?</h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>


<%= link_to "Go back", cocktails_path, :class => "btn btn-flat", :method => :get %>

</div>


