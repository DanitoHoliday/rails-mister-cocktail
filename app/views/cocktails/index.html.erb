<div class="container">
<h1>Cocktail9000</h1>
<%= link_to "Create your cocktail", new_cocktail_path, :class => "btn btn-flat", :method => :get %>
<div class="banner">
  <div>

</div>

<div>
    <ul class="index-list">
<% @cocktails.each do |cocktail| %>

    <div class="card-trip">
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <li id="card-text"><h2 id="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
       <%= link_to cocktail_path(cocktail), method: :delete do %>
      <img id="trash" src="https://img.icons8.com/cotton/64/000000/trash.png">
      <%end%>
      </li>


    </div>


<% end %>

  </ul>

</div>

</div>





